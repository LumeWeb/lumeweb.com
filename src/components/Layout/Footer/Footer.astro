      <a href="/">
        <img src={logo.src} alt="Lume">
      </a>
    </div>
    <div class="footer-contact">
      <a href="mailto:contact@lumeweb.com">
        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" xmlns="http://www.w3.org/2000/svg">
